{% extends 'base.html.twig' %}

{% block body %}

    <h1>Connexion :</h1>

    <form action="{{ path('security_login') }}" method="POST">
        <div class="form-group">
            <input required type="text" class="form-control" placeholder="Adresse email"  name="_username">
        </div>
        <div class="form-group">
            <input required type="password" class="form-control" placeholder="Mot de passe"  name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>

{% endblock %}