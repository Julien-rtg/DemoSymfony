{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1>Choisir un article Ã  modifer :</h1>
    <form action="" method="">
        <select name="selectArticle" id="" class="btn btn-info">
            {% for article in articles %}
                <option value="{{ article.id }}">{{ article.title }}</option>
            {% endfor %}
        </select>

        <button type="submit" class="btn btn-primary">Valider</button>
    </form>

    {% if app.request.get('selectArticle') %}
        <h2>Modifier un article :</h2>

        {{ form_start(formArticle) }}

        {{ form_row(formArticle.title, {'attr': {'placeholder': "Titre de l'article"}} ) }}
        {{ form_row(formArticle.content, {'attr': {'placeholder': "Contenu"}} ) }}
        {{ form_row(formArticle.image, {'attr': {'placeholder' : "Image"}} ) }}


        <button type="submit" class="btn btn-primary">Enregistrer modification</button>

        {{ form_end(formArticle) }}
    {% endif %}

{% endblock %}